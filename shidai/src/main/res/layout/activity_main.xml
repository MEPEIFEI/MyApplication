<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sucai"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.perfei.shidai.MainActivity">

    <Button
        android:id="@+id/yichang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#00000000"
        android:onClick="clickTo"
        android:text="一厂"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <Button
        android:id="@+id/erchang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/yichang"
        android:layout_alignStart="@+id/yichang"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:onClick="clickTo"
        android:text="二厂"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <Button
        android:id="@+id/sanchang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="72dp"
        android:background="#00000000"
        android:onClick="clickTo"
        android:text="英德对应表"
        android:textColor="#ffffff"
        android:textSize="30sp" />
</RelativeLayout>
