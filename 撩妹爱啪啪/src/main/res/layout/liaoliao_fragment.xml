<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fra_liaoliao"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView

                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学院："
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/et_xueyuan"
                android:textColor="#8e8e8e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="请输入学院全称"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年级："
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/et_nianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="请输入年级 11~14"
                android:textColor="#8e8e8e"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/bt_jbzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="撩不择妹"
            android:background="#3F51B5"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_nianji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:text="年级撩"
                android:background="#3F51B5"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:padding="10dp"/>
            <Button
                android:id="@+id/bt_xueyuan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:text="学院撩"
                android:background="#3F51B5"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:padding="10dp"/>
            <Button
                android:id="@+id/bt_jql"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:text="精确撩"
                android:background="#3F51B5"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:padding="10dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>